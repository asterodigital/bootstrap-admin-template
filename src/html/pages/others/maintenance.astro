---
import AuthenticationLayout from "../../layouts/admin/authentication-layout.astro";
import { getAssetPrefix } from "../../../utils/path.js";
---

<AuthenticationLayout
  title="Maintenance Mode"
  description="Site Under Maintenance"
  currentPath="others/maintenance"
>
  <div
    class="min-vh-100 d-flex flex-column justify-content-center py-4 py-sm-5 bg-light bg-opacity-50"
  >
    <div class="container px-4">
      <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 col-xl-7">
          <!-- Main Content Card -->
          <div class="card rounded-4 overflow-hidden">
            <!-- Top Accent Bar -->
            <div class="bg-primary h-3"></div>

            <div class="card-body p-4 p-lg-5">
              <!-- Header Section with Icon -->
              <div class="text-center mb-5">
                <div class="maintenance-icon-wrapper mb-4">
                  <span
                    class="bg-primary bg-opacity-10 d-inline-flex align-items-center justify-content-center rounded-circle p-3"
                    style="width: 100px; height: 100px;"
                  >
                    <i class="ri-tools-fill display-4 text-primary"></i>
                  </span>
                </div>
                <h1 class="display-6 fw-bold text-primary mb-3">Under Maintenance</h1>
                <p class="lead text-body-secondary px-lg-5">
                  We're making some improvements to bring you a better experience. Thank you for
                  your patience!
                </p>
              </div>

              <!-- Status Cards -->
              <div class="row g-4 mb-5">
                <div class="col-sm-6">
                  <div class="card h-100 border-0 bg-light bg-opacity-50">
                    <div class="card-body p-4">
                      <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                          <span
                            class="bg-primary bg-opacity-10 d-inline-flex align-items-center justify-content-center rounded-3 p-3"
                          >
                            <i class="ri-time-line text-primary fs-4"></i>
                          </span>
                        </div>
                        <div class="flex-grow-1 ms-3">
                          <h6 class="fw-semibold mb-1">Estimated Time</h6>
                          <p class="text-body-secondary mb-0">~2 Hours Remaining</p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="card h-100 border-0 bg-light bg-opacity-50">
                    <div class="card-body p-4">
                      <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                          <span
                            class="bg-primary bg-opacity-10 d-inline-flex align-items-center justify-content-center rounded-3 p-3"
                          >
                            <i class="ri-calendar-line text-primary fs-4"></i>
                          </span>
                        </div>
                        <div class="flex-grow-1 ms-3">
                          <h6 class="fw-semibold mb-1">Next Update</h6>
                          <p class="text-body-secondary mb-0">In 30 Minutes</p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Notification Form -->
              <div class="text-center">
                <h6 class="fw-semibold mb-3">Get Notified When We're Back</h6>
                <div class="row justify-content-center">
                  <div class="col-md-10">
                    <div class="input-group input-group-lg">
                      <input
                        type="email"
                        class="form-control border-end-0"
                        placeholder="Enter your email"
                        aria-label="Email address"
                        style="font-size: 0.9rem;"
                      />
                      <button class="btn btn-primary px-4 px-lg-5">
                        <i class="ri-notification-line me-2"></i> Notify Me
                      </button>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Social Links -->
              <div class="text-center mt-5">
                <p class="text-body-secondary fw-medium mb-3">Follow us for real-time updates</p>
                <div class="d-flex justify-content-center align-items-center gap-3">
                  <a href="#" class="btn btn-outline-primary btn-icon shadow-sm" title="Twitter">
                    <i class="ri-twitter-x-line"></i>
                  </a>
                  <a href="#" class="btn btn-outline-primary btn-icon shadow-sm" title="LinkedIn">
                    <i class="ri-linkedin-line"></i>
                  </a>
                  <a href="#" class="btn btn-outline-primary btn-icon shadow-sm" title="YouTube">
                    <i class="ri-youtube-line"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
