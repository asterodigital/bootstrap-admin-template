---
import AuthenticationLayout from "../../layouts/admin/authentication-layout.astro";
import { getAssetPrefix } from "../../../utils/path.js";

const pageScript = `<script>
    function updateCountdown() {
        const launchDate = new Date('2025-04-30T00:00:00').getTime();

        function update() {
            const now = new Date().getTime();
            const distance = launchDate - now;

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            const elements = {
                days: document.querySelector('.countdown-days'),
                hours: document.querySelector('.countdown-hours'),
                minutes: document.querySelector('.countdown-minutes'),
                seconds: document.querySelector('.countdown-seconds')
            };

            if (elements.days && elements.hours && elements.minutes && elements.seconds) {
                elements.days.textContent = days.toString().padStart(3, '0');
                elements.hours.textContent = hours.toString().padStart(2, '0');
                elements.minutes.textContent = minutes.toString().padStart(2, '0');
                elements.seconds.textContent = seconds.toString().padStart(2, '0');
            }
        }

        update();
        setInterval(update, 1000);
    }

    document.addEventListener('DOMContentLoaded', updateCountdown);
</script>`;
---

<AuthenticationLayout
  title="Coming Soon"
  description="Coming Soon Page"
  currentPath="others/coming-soon"
  pageScript={pageScript}
>
  <div class="min-vh-100 d-flex flex-column justify-content-center py-4 py-sm-5">
    <div class="container px-4">
      <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 col-xl-7 text-center">
          <!-- Header -->
          <h1 class="display-4 fw-bold mb-2">Coming soon!</h1>
          <p class="lead text-body-secondary mb-4 mb-lg-5">
            We are currently working hard on this page!
          </p>

          <!-- Illustration -->
          <div class="illustration-wrapper position-relative mx-auto mb-3 mb-lg-4">
            <div class="position-relative">
              <img
                src={getAssetPrefix("/assets/img/pages/maintenance2.png")}
                alt="Coming Soon Illustration"
                class="img-fluid coming-soon-img"
                width="400"
                height="320"
              />
            </div>
          </div>

          <!-- Countdown Timer -->
          <div class="countdown-wrapper py-2">
            <div class="row justify-content-center g-3 g-sm-4">
              <div class="col-3">
                <div class="countdown-item p-2 p-sm-3 rounded-3 bg-light bg-opacity-50 border">
                  <div class="countdown-value text-primary">
                    <span class="countdown-days fs-2 fs-sm-1 fw-bold">162</span>
                  </div>
                  <div class="countdown-label small">days</div>
                </div>
              </div>
              <div class="col-3">
                <div class="countdown-item p-2 p-sm-3 rounded-3 bg-light bg-opacity-50 border">
                  <div class="countdown-value text-primary">
                    <span class="countdown-hours fs-2 fs-sm-1 fw-bold">03</span>
                  </div>
                  <div class="countdown-label small">hours</div>
                </div>
              </div>
              <div class="col-3">
                <div class="countdown-item p-2 p-sm-3 rounded-3 bg-light bg-opacity-50 border">
                  <div class="countdown-value text-primary">
                    <span class="countdown-minutes fs-2 fs-sm-1 fw-bold">38</span>
                  </div>
                  <div class="countdown-label small">minutes</div>
                </div>
              </div>
              <div class="col-3">
                <div class="countdown-item p-2 p-sm-3 rounded-3 bg-light bg-opacity-50 border">
                  <div class="countdown-value text-primary">
                    <span class="countdown-seconds fs-2 fs-sm-1 fw-bold">32</span>
                  </div>
                  <div class="countdown-label small">seconds</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Newsletter Form -->
          <div class="newsletter-form mx-auto mt-3 mt-lg-4" style="max-width: 420px;">
            <div class="input-group input-group-lg shadow-sm">
              <input
                type="email"
                class="form-control"
                placeholder="Enter your email"
                aria-label="Email address"
              />
              <button class="btn btn-primary px-4 px-lg-5"> Notify me </button>
            </div>
          </div>

          <!-- Social Links -->
          <div
            class="social-links mt-4 pt-2 d-flex justify-content-center align-items-center gap-3"
          >
            <button type="button" class="btn btn-outline-primary btn-icon-sm" title="Twitter"
              ><i class="ri-twitter-x-line"></i></button
            >
            <button type="button" class="btn btn-outline-primary btn-icon-sm" title="LinkedIn"
              ><i class="ri-linkedin-line"></i></button
            >
            <button type="button" class="btn btn-outline-primary btn-icon-sm" title="YouTube"
              ><i class="ri-youtube-line"></i></button
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
