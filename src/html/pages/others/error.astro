---
import AuthenticationLayout from "../../layouts/admin/authentication-layout.astro";
import { getAssetPrefix, getPathPrefix } from "../../../utils/path.js";
---

<AuthenticationLayout
  title="404 - Page Not Found"
  description="Page Not Found Error"
  currentPath="others/404"
>
  <div
    class="min-vh-100 d-flex flex-column justify-content-center py-4 py-sm-5 bg-light bg-opacity-50"
  >
    <div class="container px-4">
      <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 col-xl-7">
          <div class="card rounded-4 overflow-hidden text-center">
            <!-- Top Accent Bar -->
            <div class="bg-primary h-1"></div>

            <div class="card-body p-4 p-lg-5">
              <!-- Error Image -->
              <div class="error-image mb-2">
                <img
                  src={getAssetPrefix("/assets/img/pages/404.png")}
                  alt="404 Error Illustration"
                  class="img-fluid"
                  width="400"
                  height="300"
                />
              </div>

              <!-- Error Content -->
              <div class="error-content mb-4">
                <h1 class="d-none fw-bold text-primary mb-3">404</h1>
                <h2 class="h3 fw-semibold mb-3">Oops! Page Not Found</h2>
                <p class="lead text-body-secondary mb-4">
                  The page you are looking for might have been removed, had its name changed, or is
                  temporarily unavailable.
                </p>
                <div class="d-flex gap-3 justify-content-center">
                  <a href={getPathPrefix("/dashboard")} class="btn btn-primary px-4">
                    <i class="ri-home-line me-2"></i> Back to Home
                  </a>
                  <button
                    type="button"
                    class="btn btn-outline-primary px-4"
                    onclick="history.back()"
                  >
                    <i class="ri-arrow-left-line me-2"></i> Go Back
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
