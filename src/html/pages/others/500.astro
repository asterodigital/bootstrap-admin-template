---
import AuthenticationLayout from '../../layouts/admin/authentication-layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../utils/path.js'
---

<AuthenticationLayout
  title="500 - Server Error"
  description="Internal Server Error"
  currentPath="others/500"
>
  <div
    class="min-vh-100 d-flex flex-column justify-content-center py-4 py-sm-5 bg-light bg-opacity-50"
  >
    <div class="container px-4">
      <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 col-xl-7">
          <div class="card overflow-hidden text-center">
            <!-- Top Accent Bar -->
            <div class="bg-primary h-1"></div>

            <div class="card-body p-3 p-lg-4">
              <!-- Error Image -->
              <div class="error-image mb-2">
                <img
                  src={getAssetPrefix('/assets/img/pages/500.png')}
                  alt="500 Error Illustration"
                  class="img-fluid rounded-4"
                  width="400"
                  height="300"
                />
              </div>

              <!-- Error Content -->
              <div class="error-content mb-4">
                <h1 class="d-none fw-bold text-primary mb-3">500</h1>
                <h2 class="h3 fw-semibold mb-3">Internal Server Error</h2>
                <p class="lead text-body-secondary mb-4">
                  Oops! Something went wrong on our end. Our team has been notified and is working
                  to fix the issue.
                </p>
                <div class="d-flex gap-3 justify-content-center flex-wrap">
                  <button
                    type="button"
                    class="btn btn-primary px-4"
                    onclick="window.location.reload()"
                  >
                    <i class="ri-refresh-line me-2"></i> Try Again
                  </button>
                  <a href={getPathPrefix('/dashboard')} class="btn btn-outline-primary px-4">
                    <i class="ri-home-line me-2"></i> Back to Home
                  </a>
                </div>
              </div>

              <!-- Status Section -->
              <div class="status-section mx-auto" style="max-width: 500px;">
                <div class="mt-4">
                  <p class="text-body-secondary mb-3">Still having issues?</p>
                  <button type="button" class="btn btn-primary btn-sm">
                    <i class="ri-customer-service-2-line me-2"></i> Contact Support
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
