---
import AuthenticationLayout from '../../layouts/admin/authentication-layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../utils/path.js'
---

<AuthenticationLayout
  title="401 - Unauthorized"
  description="Unauthorized Access"
  currentPath="others/401"
>
  <div
    class="min-vh-100 d-flex flex-column justify-content-center py-4 py-sm-5 bg-light bg-opacity-50"
  >
    <div class="container px-4">
      <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 col-xl-7">
          <div class="card rounded-4 overflow-hidden text-center">
            <!-- Top Accent Bar -->
            <div class="bg-primary h-1"></div>

            <div class="card-body p-4 p-lg-5">
              <!-- Error Image -->
              <div class="error-image mb-2">
                <img
                  src={getAssetPrefix('/assets/img/pages/401.png')}
                  alt="401 Error Illustration"
                  class="img-fluid"
                  width="400"
                  height="300"
                />
              </div>

              <!-- Error Content -->
              <div class="error-content mb-4">
                <h1 class="d-none fw-bold text-primary mb-3">401</h1>
                <h2 class="h3 fw-semibold mb-3">Access Denied</h2>
                <p class="lead text-body-secondary mb-4">
                  Sorry, you don't have permission to access this page. Please make sure you're
                  logged in with the correct credentials.
                </p>
                <div class="d-flex gap-3 justify-content-center flex-wrap">
                  <a
                    href={getPathPrefix('/authentication/basic/login')}
                    class="btn btn-primary px-4"
                  >
                    <i class="ri-login-box-line me-2"></i> Login
                  </a>
                  <a href={getPathPrefix('/dashboard')} class="btn btn-outline-primary px-4">
                    <i class="ri-home-line me-2"></i> Back to Home
                  </a>
                </div>
              </div>

              <!-- Help Section -->
              <div class="help-section mx-auto" style="max-width: 500px;">
                <div class="card bg-primary bg-opacity-10 border-0">
                  <div class="card-body p-4">
                    <p class="text-body-secondary mb-3">Need help accessing this page?</p>
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                      <button type="button" class="btn btn-primary btn-sm">
                        <i class="ri-question-line me-2"></i> Help Center
                      </button>
                      <button type="button" class="btn btn-outline-primary btn-sm">
                        <i class="ri-customer-service-2-line me-2"></i> Contact Support
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
