---
import AdminLayout from "../../layouts/admin/admin-layout.astro";
import PageHeader from "../../components/common/page-header.astro";
import { getAssetPrefix, getPathPrefix } from "../../../utils/path.js";

// Page Header Configuration
const userFormHeaderConfig = {
  title: "Create New User",
  breadcrumbs: [
    { label: "Dashboard", href: getPathPrefix("/dashboard") },
    { label: "Users", href: getPathPrefix("/users/list") },
    { label: "Create User", class: "active" }
  ],
  actions: [
    {
      label: "Return to Users",
      href: getPathPrefix("/users/list"),
      icon: "ri-arrow-left-line",
      variant: "btn-outline-primary"
    }
  ]
};

// Permission Module Configuration
const permissionModules = [
  {
    id: "cms",
    name: "Content Management",
    groups: [
      {
        id: "content_management",
        name: "Page & Post Management",
        permissions: [
          { id: "view_cms", name: "View Content Dashboard" },
          { id: "edit_cms", name: "Edit Content Settings" },
          { id: "manage_pages", name: "Manage Static Pages" },
          { id: "manage_posts", name: "Manage Blog Posts" },
          { id: "manage_comments", name: "Moderate Comments" }
        ]
      },
      {
        id: "media_management",
        name: "Media Library",
        permissions: [{ id: "manage_media", name: "Manage Media Files" }]
      },
      {
        id: "content_organization",
        name: "Content Organization",
        permissions: [
          { id: "manage_categories", name: "Manage Content Categories" },
          { id: "manage_tags", name: "Manage Content Tags" }
        ]
      }
    ]
  },
  {
    id: "seo",
    name: "Search Engine Optimization",
    groups: [
      {
        id: "seo_management",
        name: "SEO Tools",
        permissions: [
          { id: "manage_seo", name: "Manage SEO Settings" },
          { id: "manage_meta", name: "Manage Meta Information" }
        ]
      },
      {
        id: "analytics",
        name: "Analytics Tools",
        permissions: [{ id: "view_analytics", name: "Access Analytics Data" }]
      },
      {
        id: "url_management",
        name: "URL Management",
        permissions: [{ id: "manage_redirects", name: "Manage URL Redirects" }]
      }
    ]
  },
  {
    id: "system",
    name: "System Administration",
    groups: [
      {
        id: "user_management",
        name: "User Administration",
        permissions: [
          { id: "manage_users", name: "Manage User Accounts" },
          { id: "manage_roles", name: "Manage User Roles" }
        ]
      },
      {
        id: "system_settings",
        name: "System Configuration",
        permissions: [{ id: "manage_settings", name: "Manage System Settings" }]
      },
      {
        id: "system_maintenance",
        name: "System Maintenance",
        permissions: [
          { id: "manage_backups", name: "Manage System Backups" },
          { id: "manage_cache", name: "Manage System Cache" }
        ]
      },
      {
        id: "system_monitoring",
        name: "System Monitoring",
        permissions: [{ id: "view_logs", name: "View System Logs" }]
      },
      {
        id: "api_management",
        name: "API Configuration",
        permissions: [{ id: "manage_api", name: "Manage API Settings" }]
      }
    ]
  }
];

// External Dependencies: Required JavaScript
const userFormScripts = `
  <script src="${getAssetPrefix("/assets/js/pages/roles_and_permissions/roles/toggle-permissions.js")}"></script>
  <script type="module" src="${getAssetPrefix("/assets/js/pages/users/form.js")}"></script>
`;

// Custom Styles for Form Elements
const userFormStyles = `
  <style>
    .custom-option {
        padding: 1rem;
        border: 1px solid var(--bs-border-color);
        border-radius: var(--bs-border-radius);
        cursor: pointer;
        transition: all 0.2s ease-in-out;
    }

    .custom-option:hover {
        border-color: var(--bs-primary);
        background-color: var(--bs-primary-bg-subtle);
    }

    .custom-option .form-check-input:checked ~ .form-check-label {
        color: var(--bs-primary);
    }
  </style>
`;
---

<AdminLayout
  title="Create User"
  description="Add a new user account to the system"
  currentPath="users/add"
  pageScript={userFormScripts}
  pageCss={userFormStyles}
>
  <PageHeader {...userFormHeaderConfig} />

  <form id="userForm" class="row g-4" novalidate>
    <!-- User Profile Information -->
    <div class="col-lg-4">
      <div class="card">
        <div class="card-header bg-transparent pt-4 pb-3">
          <div class="d-flex align-items-center">
            <i class="ri-user-add-line me-2"></i>
            <h5 class="card-title mb-0">Profile Information</h5>
          </div>
        </div>
        <div class="card-body">
          <!-- Profile Picture Upload -->
          <div class="text-center mb-4">
            <div class="position-relative d-inline-block">
              <div class="avatar-upload mb-3">
                <div class="avatar-preview rounded border" style="width: 120px; height: 120px;">
                  <img
                    src={getAssetPrefix("/assets/img/avatars/placeholder-avatar.jpg")}
                    alt="Profile Picture"
                    class="rounded w-100 h-100"
                    style="object-fit: cover;"
                  />
                </div>
                <button
                  type="button"
                  class="btn btn-primary btn-icon-sm position-absolute rounded-circle p-2 update-avatar-btn"
                  style="right: -10px; top: -10px;"
                  onclick="document.getElementById('avatarInput').click()"
                  title="Change Profile Picture"
                >
                  <i class="ri-camera-line"></i>
                </button>
                <input
                  type="file"
                  id="avatarInput"
                  class="d-none"
                  accept="image/png,image/jpg,image/jpeg,image/webp"
                />
              </div>
            </div>
            <p class="text-muted small mb-0">
              <i class="ri-information-line me-1"></i>
              Supported formats: PNG, JPG, JPEG, WebP
            </p>
          </div>

          <!-- Basic Information Fields -->
          <div class="mb-3">
            <label class="form-label required">Full Name</label>
            <input
              type="text"
              class="form-control"
              id="fullName"
              placeholder="Enter user's full name"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label required">Email Address</label>
            <input
              type="email"
              class="form-control"
              id="email"
              placeholder="Enter user's email address"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label required">Username</label>
            <input
              type="text"
              class="form-control"
              id="username"
              placeholder="Choose a unique username"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label required">Password</label>
            <div class="d-flex align-items-center gap-2">
              <div class="password-wrapper w-100">
                <input
                  type="password"
                  class="form-control password-input"
                  id="password"
                  placeholder="Enter secure password"
                  required
                />
                <button class="password-toggle" type="button" title="Toggle Password Visibility">
                  <i class="ri-eye-off-line"></i>
                </button>
              </div>
              <button
                class="btn btn-light-primary generate-password"
                type="button"
                title="Generate Strong Password"
              >
                <i class="ri-refresh-line me-1"></i>Generate
              </button>
            </div>
            <div class="form-text">
              <i class="ri-shield-check-line me-1"></i>
              Password must be 8+ characters with letters, numbers & symbols
            </div>
          </div>

          <!-- Additional Information Fields -->
          <div class="mb-3">
            <label class="form-label">Phone Number</label>
            <input type="tel" class="form-control" id="phone" placeholder="Enter contact number" />
          </div>

          <div class="mb-3">
            <label class="form-label">Biography</label>
            <textarea
              class="form-control"
              id="bio"
              rows="3"
              placeholder="Enter user's brief description"></textarea>
            <div class="form-text">
              <i class="ri-information-line me-1"></i>
              A short description for the user's profile page
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label">Location</label>
            <input
              type="text"
              class="form-control"
              id="location"
              placeholder="Enter city, country"
            />
          </div>

          <div class="mb-3">
            <label class="form-label">Time Zone</label>
            <select class="form-select" id="timezone">
              <option value="">Select user's time zone</option>
              <option value="PST">Pacific Time (UTC-08:00)</option>
              <option value="MST">Mountain Time (UTC-07:00)</option>
              <option value="CST">Central Time (UTC-06:00)</option>
              <option value="EST">Eastern Time (UTC-05:00)</option>
            </select>
          </div>
        </div>
      </div>
    </div>

    <!-- Access Control Settings -->
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header bg-transparent pt-4 pb-3">
          <div class="d-flex align-items-center">
            <i class="ri-shield-keyhole-line me-2"></i>
            <h5 class="card-title mb-0">Access & Permissions</h5>
          </div>
        </div>
        <div class="card-body">
          <!-- Role Selection -->
          <div class="mb-4">
            <label class="form-label required">Access Role</label>
            <div class="row g-3">
              <div class="col-md-3">
                <div class="form-check custom-option">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="role"
                    id="roleAdmin"
                    value="admin"
                  />
                  <label class="form-check-label" for="roleAdmin">
                    <span class="d-block fw-semibold mb-1">
                      <i class="ri-admin-line me-1"></i>Administrator
                    </span>
                    <small class="text-muted">Full system access</small>
                  </label>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-check custom-option">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="role"
                    id="roleEditor"
                    value="editor"
                  />
                  <label class="form-check-label" for="roleEditor">
                    <span class="d-block fw-semibold mb-1">
                      <i class="ri-edit-2-line me-1"></i>Editor
                    </span>
                    <small class="text-muted">Content management</small>
                  </label>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-check custom-option">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="role"
                    id="roleAuthor"
                    value="author"
                  />
                  <label class="form-check-label" for="roleAuthor">
                    <span class="d-block fw-semibold mb-1">
                      <i class="ri-quill-pen-line me-1"></i>Author
                    </span>
                    <small class="text-muted">Content creation</small>
                  </label>
                </div>
              </div>
            </div>
          </div>

          <!-- Custom Permission Settings -->
          <div class="mb-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <label class="form-label mb-0">Specific Permissions</label>
            </div>
            <div class="permissions-container">
              {
                permissionModules.map((module) => (
                  <div class="module-section mb-3" id={`module_${module.id}`}>
                    <div class="card">
                      <div class="card-header bg-transparent py-2">
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="form-check">
                            <input
                              class="form-check-input toggle-module"
                              type="checkbox"
                              id={`module_toggle_${module.id}`}
                              data-module-id={module.id}
                            />
                            <label
                              class="form-check-label fw-medium"
                              for={`module_toggle_${module.id}`}
                            >
                              {module.name}
                            </label>
                          </div>
                          <button
                            type="button"
                            class="btn btn-sm btn-outline-primary toggle-module"
                            data-module-id={module.id}
                            data-expanded="true"
                            data-bs-toggle="tooltip"
                            data-bs-placement="top"
                            title="Toggle All Permissions"
                          >
                            <i class="ri-list-check-2 me-md-1" />{" "}
                            <span class="d-none d-md-inline">Toggle All</span>
                          </button>
                        </div>
                      </div>
                      <div class="card-body py-2">
                        <div class="permission-groups d-flex flex-column flex-md-row flex-wrap">
                          {module.groups.map((group) => (
                            <div
                              class="col-12 col-md-6 col-lg-4 permission-group px-2 mb-3"
                              id={`group_${group.id}`}
                            >
                              <div class="d-flex align-items-top mb-2 gap-1">
                                <button
                                  type="button"
                                  class="btn btn-outline-primary toggle-permissions mt-1"
                                  data-group-id={group.id}
                                  title="Toggle Group Permissions"
                                >
                                  <i class="ri-checkbox-multiple-line" />
                                </button>
                                <div class="form-check">
                                  <input
                                    class="form-check-input toggle-group"
                                    type="checkbox"
                                    id={`group_toggle_${group.id}`}
                                    data-group-id={group.id}
                                  />
                                  <label
                                    class="form-check-label fw-medium"
                                    for={`group_toggle_${group.id}`}
                                  >
                                    {group.name}
                                  </label>
                                </div>
                              </div>
                              <div
                                class="permission-items ms-4 collapse show"
                                id={`permissions_${group.id}`}
                              >
                                {group.permissions.map((permission) => (
                                  <div class="permission-item form-check">
                                    <input
                                      class="form-check-input permission-checkbox"
                                      type="checkbox"
                                      id={`permission_${permission.id}`}
                                      name={`permissions[]`}
                                      value={permission.id}
                                    />
                                    <label
                                      class="form-check-label"
                                      for={`permission_${permission.id}`}
                                    >
                                      {permission.name}
                                    </label>
                                  </div>
                                ))}
                              </div>
                            </div>
                          ))}
                        </div>
                      </div>
                    </div>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
        <div class="card-footer d-flex justify-content-end gap-2">
          <button type="button" class="btn btn-outline-secondary" onclick="window.history.back()">
            <i class="ri-arrow-left-line me-1"></i>Cancel
          </button>
          <button type="submit" class="btn btn-primary">
            <i class="ri-user-add-line me-1"></i>Create User Account
          </button>
        </div>
      </div>
    </div>
  </form>
</AdminLayout>
