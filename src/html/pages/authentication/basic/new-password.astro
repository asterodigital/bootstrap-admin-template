---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import Branding from '../../../components/common/branding.astro'
import ThemeToggler from '../../../components/common/theme-toggler.astro'
import { getPathPrefix } from '../../../../utils/path.js'
---

<AuthenticationLayout
  title="New Password"
  description="New password example"
  currentPath="authentication/basic/new-password"
>
  <div class="d-flex justify-content-center align-items-center min-vh-100 position-relative">
    <!-- Theme Toggle Button -->
    <ThemeToggler />
    <div class="text-center" style="min-width: 340px; max-width: 400px;">
      <!-- Company Logo and Name -->
      <Branding brandName={false} />
      <h1 class="h3 mb-3">Create New Password</h1>
      <!-- Main Card -->
      <div class="card shadow-sm m-2">
        <div class="card-body p-4">
          <div class="text-start fs-2 mb-2">
            <i class="ri-lock-line"></i>
          </div>
          <p class="text-start text-muted mb-3">
            Choose a strong new password to secure your account. Make sure it's something memorable
            and safe.
          </p>
          <!-- New Password Form -->
          <form class="text-start mb-3">
            <div class="mb-3">
              <label for="new-password" class="form-label">New Password</label>
              <div class="password-wrapper">
                <input
                  type="password"
                  class="form-control password-input"
                  id="new-password"
                  placeholder="Password"
                  autocomplete="new-password"
                  required
                  minlength="8"
                  title="Password must be at least 8 characters long"
                />
                <button class="password-toggle" type="button" aria-label="Show password">
                  <i class="ri-eye-off-line"></i>
                </button>
              </div>
            </div>
            <div class="mb-3">
              <label for="confirm-password" class="form-label">Confirm Password</label>
              <div class="password-wrapper">
                <input
                  type="password"
                  class="form-control password-input"
                  id="confirm-password"
                  placeholder="Password"
                  autocomplete="new-password"
                  required
                />
                <button class="password-toggle" type="button" aria-label="Show password">
                  <i class="ri-eye-off-line"></i>
                </button>
              </div>
              <small class="text-muted">Ensure both fields match</small>
            </div>
            <button type="submit" class="btn btn-primary w-100">Save New Password</button>
          </form>
          <div class="text-center mt-3">
            <a
              href={getPathPrefix('/authentication/basic/login')}
              class="text-decoration-none text-primary">Back to Login</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
