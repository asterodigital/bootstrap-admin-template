---
import AuthenticationLayout from "../../../layouts/admin/authentication-layout.astro";
import Branding from "../../../components/common/branding.astro";
import ThemeToggler from "../../../components/common/theme-toggler.astro";
import { getPathPrefix } from "../../../../utils/path.js";
---

<AuthenticationLayout
  title="Recovery Link Sent"
  description="Recovery link sent example"
  currentPath="authentication/basic/link-sent"
>
  <div class="d-flex justify-content-center align-items-center min-vh-100 position-relative">
    <!-- Theme Toggle Button -->
    <ThemeToggler />
    <div class="text-center" style="min-width: 340px; max-width: 400px;">
      <!-- Company Logo and Name -->
      <Branding brandName={false} />
      <h1 class="h3 mb-3">Link Sent</h1>
      <!-- Main Card -->
      <div class="card shadow-sm m-2">
        <div class="card-body p-4">
          <div class="text-start fs-2 mb-2">
            <i class="ri-mail-send-line"></i>
          </div>
          <p class="text-start text-muted mb-4">
            We've sent a recovery link to your email address. Please check your inbox (and the spam
            folder, just in case) to reset your password.
          </p>
          <div class="text-start mb-3">
            <a
              href={getPathPrefix("/authentication/basic/forgot-password")}
              class="text-decoration-none text-primary"
            >
              Use another email address
            </a>
          </div>
          <div class="text-center mb-3">
            <button type="button" class="btn btn-primary w-100"> Resend Link </button>
          </div>
          <small class="text-muted d-block text-center">
            Please allow a few minutes for the email to arrive.
          </small>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
