---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import Branding from '../../../components/common/branding.astro'
import ThemeToggler from '../../../components/common/theme-toggler.astro'
---

<AuthenticationLayout
  title="2-Step Verification Code"
  description="2-Step verification code example"
  currentPath="authentication/basic/2-step-verification-code"
>
  <div class="d-flex justify-content-center align-items-center min-vh-100 position-relative">
    <!-- Theme Toggle Button -->
    <ThemeToggler />
    <div class="text-center" style="min-width: 340px; max-width: 400px;">
      <!-- Company Logo and Name -->
      <Branding brandName={false} />
      <h1 class="h4 mb-3">2-Step Verification</h1>
      <!-- Main Card -->
      <div class="card m-2">
        <div class="card-body p-2">
          <div class="text-start fs-2 mb-2">
            <i class="ri-key-line"></i>
          </div>
          <!-- 2-Step Verification Form -->
          <form class="text-start">
            <div class="mb-3">
              <p class="text-muted">
                Enter the 6-digit verification code sent to your phone number.
              </p>
            </div>
            <div class="d-flex justify-content-between mb-3">
              <input
                type="text"
                class="py-3 me-1 form-control text-center"
                id="code1"
                maxlength="1"
                required
                autofocus
              />
              <input
                type="text"
                class="py-3 me-1 form-control text-center"
                id="code2"
                maxlength="1"
                required
              />
              <input
                type="text"
                class="py-3 me-1 form-control text-center"
                id="code3"
                maxlength="1"
                required
              />
              <input
                type="text"
                class="py-3 me-1 form-control text-center"
                id="code4"
                maxlength="1"
                required
              />
              <input
                type="text"
                class="py-3 me-1 form-control text-center"
                id="code5"
                maxlength="1"
                required
              />
              <input
                type="text"
                class="py-3 form-control text-center"
                id="code6"
                maxlength="1"
                required
              />
            </div>
            <div class="form-check text-start mb-3">
              <label class="form-check-label" for="dontAskAgain">
                <input class="form-check-input" type="checkbox" id="dontAskAgain" />
                Do not ask again on this device
              </label>
            </div>
            <button type="submit" class="btn btn-primary w-100">Verify Code</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
