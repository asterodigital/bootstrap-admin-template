---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import Branding from '../../../components/common/branding.astro'
import ThemeToggler from '../../../components/common/theme-toggler.astro'
import { getPathPrefix } from '../../../../utils/path.js'
---

<AuthenticationLayout
  title="Verify Email"
  description="Verify email example"
  currentPath="authentication/basic/verify-email"
>
  <div class="d-flex justify-content-center align-items-center min-vh-100 position-relative">
    <!-- Theme Toggle Button -->
    <ThemeToggler />
    <div class="text-center" style="min-width: 340px; max-width: 400px;">
      <!-- Company Logo and Name -->
      <Branding brandName={false} />
      <h1 class="h3 mb-3">Verify Email</h1>
      <!-- Main Card -->
      <div class="card shadow-sm m-2">
        <div class="card-body p-4">
          <div class="text-start fs-2 mb-2">
            <i class="ri-mail-send-line"></i>
          </div>
          <p class="text-start text-muted mb-4">
            Enter the verification code sent to your email to complete the process.
          </p>
          <!-- Verification Code Form -->
          <form class="text-start mb-3">
            <div class="mb-3">
              <label for="verification-code" class="form-label">Enter the verification code</label>
              <input
                type="text"
                class="form-control"
                id="verification-code"
                placeholder="Verification code"
                required
                maxlength="6"
                pattern="[0-9]{6}"
              />
            </div>
            <button type="submit" class="btn btn-primary w-100"> Verify Email </button>
          </form>
          <div class="text-center">
            Didn't receive the code? <a
              href={getPathPrefix('/authentication/basic/verify-email')}
              class="text-decoration-none text-primary">Resend</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
