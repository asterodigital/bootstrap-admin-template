---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import Branding from '../../../components/common/branding.astro'
import ThemeToggler from '../../../components/common/theme-toggler.astro'
import { getPathPrefix } from '../../../../utils/path.js'
---

<AuthenticationLayout
  title="Register"
  description="Register example"
  currentPath="authentication/basic/register"
>
  <div class="d-flex justify-content-center align-items-center min-vh-100 position-relative">
    <!-- Theme Toggle Button -->
    <ThemeToggler />
    <div class="text-center" style="min-width: 340px; max-width: 400px;">
      <!-- Company Logo and Name -->
      <Branding brandName={false} />
      <h1 class="h3 mb-3">Register</h1>
      <!-- Main Card -->
      <div class="card m-2">
        <div class="card-body p-2">
          <!-- Register Form -->
          <form class="text-start">
            <!-- Full Name Field -->
            <div class="mb-3">
              <label for="fullName" class="form-label">Full Name</label>
              <input
                type="text"
                class="form-control"
                id="fullName"
                placeholder="John Doe"
                autocomplete="name"
                required
              />
            </div>
            <!-- Email Field -->
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="m@example.com"
                autocomplete="username"
                required
              />
            </div>
            <!-- Password Field -->
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <div class="password-wrapper">
                <input
                  type="password"
                  class="form-control password-input"
                  id="password"
                  placeholder="Password"
                  autocomplete="new-password"
                  required
                />
                <button class="password-toggle" type="button" aria-label="Show password">
                  <i class="ri-eye-off-line"></i>
                </button>
              </div>
            </div>
            <!-- Confirm Password Field -->
            <div class="mb-3">
              <label for="confirmPassword" class="form-label">Confirm Password</label>
              <div class="password-wrapper">
                <input
                  type="password"
                  class="form-control password-input"
                  id="confirmPassword"
                  placeholder="Password"
                  autocomplete="new-password"
                  required
                />
                <button class="password-toggle" type="button" aria-label="Show password">
                  <i class="ri-eye-off-line"></i>
                </button>
              </div>
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-3">Register</button>
          </form>
          <div class="text-center">
            Already have an account? <a
              href={getPathPrefix('/authentication/basic/login')}
              class="text-decoration-none text-primary">Login</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
