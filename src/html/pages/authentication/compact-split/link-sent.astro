---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import Branding from '../../../components/common/branding.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<AuthenticationLayout
  title="Recovery Link Sent"
  description="Recovery link sent example"
  currentPath="authentication/compact-split/link-sent"
>
  <div class="row d-flex align-items-center min-vh-100 position-relative">
    <div class="col-12 col-lg-8 offset-lg-2">
      <!-- Theme Toggle Button -->
      <button
        class="btn p-0 border-0 shadow-none position-absolute top-0 end-0 m-3 px-3"
        id="theme-toggle"
      >
        <i class="ri-sun-line fs-5"></i>
      </button>
      <!-- Company Logo and Name -->
      <Branding brandName={false} />
      <h1 class="h4 text-center mb-3">Recovery Link Sent</h1>

      <!-- Main Card -->
      <div class="card p-0 mx-2 mx-md-auto" style="max-width: 760px;">
        <div class="card-body p-0">
          <div class="row m-0">
            <div class="col-12 col-md-6 p-4 my-auto">
              <div class="text-start fs-2 mb-2">
                <i class="ri-mail-send-line"></i>
              </div>
              <p class="text-muted mb-4">
                We've sent a recovery link to your email address. Please check your inbox (and the
                spam folder, just in case) to reset your password.
              </p>

              <div class="text-start mb-3">
                <a
                  href={getPathPrefix('/authentication/compact-split/forgot-password')}
                  class="text-decoration-none text-primary"
                >
                  Use another email address
                </a>
              </div>

              <div class="text-center mb-3">
                <button type="button" class="btn btn-primary w-100"> Resend Link </button>
              </div>

              <small class="text-muted d-block text-center">
                Please allow a few minutes for the email to arrive.
              </small>
            </div>
            <div class="col-md-6 d-none d-md-block p-0 m-0">
              <img
                src={getAssetPrefix('/assets/svg/placeholder.svg')}
                class="img-fluid rounded-end-4"
                alt=""
                style="object-fit: cover; width: 100%; height: 100%;"
              />
            </div>
          </div>
        </div>
      </div>

      <!-- Terms Text -->
      <div class="mx-2 mt-4 text-center text-muted small">
        By clicking continue, you agree to our
        <a href="#" class="text-decoration-none text-primary">Terms of Service</a> and
        <a href="#" class="text-decoration-none text-primary">Privacy Policy</a>.
      </div>
    </div>
  </div>
</AuthenticationLayout>
