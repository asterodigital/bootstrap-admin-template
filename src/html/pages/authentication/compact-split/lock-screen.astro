---
import AuthenticationLayout from "../../../layouts/admin/authentication-layout.astro";
import Branding from "../../../components/common/branding.astro";
import { getAssetPrefix, getPathPrefix } from "../../../../utils/path.js";
---

<AuthenticationLayout
  title="Lock Screen"
  description="Lock screen example"
  currentPath="authentication/compact-split/lock-screen"
>
  <div class="row d-flex align-items-center min-vh-100 position-relative">
    <div class="col-12 col-lg-8 offset-lg-2">
      <!-- Theme Toggle Button -->
      <button
        class="btn p-0 border-0 shadow-none position-absolute top-0 end-0 m-3 px-3"
        id="theme-toggle"
      >
        <i class="ri-sun-line fs-5"></i>
      </button>
      <!-- Company Logo and Name -->
      <Branding brandName={false} />
      <h1 class="h4 text-center mb-3">Account locked</h1>

      <!-- Main Card -->
      <div class="card shadow-sm mx-2 mx-md-auto" style="max-width: 760px;">
        <div class="card-body p-0">
          <div class="row m-0">
            <div class="col-12 col-md-6 p-4">
              <!-- Account Locked Form -->
              <form class="text-start">
                <div class="text-center mb-4">
                  <!-- Profile Image -->
                  <div class="avatar position-relative">
                    <img
                      src={getAssetPrefix("/assets/img/avatars/avatar2.jpg")}
                      alt="User"
                      class="rounded-circle mb-2"
                      width="56"
                      height="56"
                    />
                  </div>
                  <!-- User Name -->
                  <h5 class="text-muted">Amara Evans</h5>
                </div>
                <div class="mb-3">
                  <p class="text-muted">
                    <i class="ri-lock-line"></i> Your account has been locked. Please enter your password
                    to unlock it.
                  </p>
                </div>
                <div class="mb-3">
                  <div class="d-flex justify-content-between align-items-center mb-1">
                    <label for="password" class="form-label mb-0">Password</label>
                    <a
                      href={getPathPrefix("/authentication/compact-split/forgot-password")}
                      class="text-decoration-none text-primary">Forgot your password?</a
                    >
                  </div>
                  <div class="password-wrapper">
                    <input
                      type="password"
                      class="form-control password-input"
                      id="password"
                      placeholder="Enter your password"
                      required
                    />
                    <button class="password-toggle" type="button">
                      <i class="ri-eye-off-line"></i>
                    </button>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Unlock Account</button>
              </form>
            </div>
            <div class="col-md-6 d-none d-md-block p-0 m-0">
              <img
                src={getAssetPrefix("/assets/svg/placeholder.svg")}
                class="img-fluid"
                alt=""
                style="object-fit: cover; width: 100%; height: 100%;"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
