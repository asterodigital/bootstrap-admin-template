---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import Branding from '../../../components/common/branding.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<AuthenticationLayout
  title="Register"
  description="Register example"
  currentPath="authentication/compact-split/register"
>
  <div class="row d-flex align-items-center min-vh-100 position-relative">
    <div class="col-12 col-lg-8 offset-lg-2">
      <!-- Theme Toggle Button -->
      <button
        class="btn p-0 border-0 shadow-none position-absolute top-0 end-0 m-3 px-3"
        id="theme-toggle"
      >
        <i class="ri-sun-line fs-5"></i>
      </button>
      <!-- Company Logo and Name -->
      <Branding brandName={false} />
      <h1 class="h4 text-center mb-3">Create Your Account</h1>

      <!-- Main Card -->
      <div class="card shadow-sm mx-2 mx-md-auto" style="max-width: 760px;">
        <div class="card-body p-0">
          <div class="row m-0">
            <div class="col-12 col-md-6 p-4">
              <p class="text-muted mb-4">Fill in the details below to register.</p>
              <!-- Register Form -->
              <form class="text-start">
                <!-- Full Name Field -->
                <div class="mb-3">
                  <label for="fullName" class="form-label">Full Name</label>
                  <input
                    type="text"
                    class="form-control"
                    id="fullName"
                    placeholder="John Doe"
                    autocomplete="name"
                    required
                  />
                </div>
                <!-- Email Field -->
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input
                    type="email"
                    class="form-control"
                    id="email"
                    placeholder="m@example.com"
                    autocomplete="username"
                    required
                  />
                </div>
                <!-- Password Field -->
                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <div class="password-wrapper">
                    <input
                      type="password"
                      class="form-control password-input"
                      id="password"
                      placeholder="Password"
                      autocomplete="new-password"
                      required
                    />
                    <button class="password-toggle" type="button" aria-label="Show password">
                      <i class="ri-eye-off-line"></i>
                    </button>
                  </div>
                </div>
                <!-- Confirm Password Field -->
                <div class="mb-3">
                  <label for="confirmPassword" class="form-label">Confirm Password</label>
                  <div class="password-wrapper">
                    <input
                      type="password"
                      class="form-control password-input"
                      id="confirmPassword"
                      placeholder="Password"
                      autocomplete="new-password"
                      required
                    />
                    <button class="password-toggle" type="button" aria-label="Show password">
                      <i class="ri-eye-off-line"></i>
                    </button>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-3"> Register </button>
              </form>
              <!-- Social Register Buttons -->
              <div class="text-center text-muted mb-3">Or continue with</div>
              <div class="row mb-4">
                <div class="col-4">
                  <button class="btn btn-outline-primary w-100">
                    <i class="ri-apple-fill"></i>
                  </button>
                </div>
                <div class="col-4">
                  <button class="btn btn-outline-primary w-100">
                    <i class="ri-google-fill"></i>
                  </button>
                </div>
                <div class="col-4">
                  <button class="btn btn-outline-primary w-100">
                    <i class="ri-microsoft-fill"></i>
                  </button>
                </div>
              </div>

              <div class="text-center">
                Already have an account? <a
                  href={getPathPrefix('/authentication/compact-split/login')}
                  class="text-decoration-none text-primary">Login</a
                >
              </div>
            </div>
            <div class="col-md-6 d-none d-md-block p-0 m-0">
              <img
                src={getAssetPrefix('/assets/svg/placeholder.svg')}
                class="img-fluid"
                alt=""
                style="object-fit: cover; width: 100%; height: 100%;"
              />
            </div>
          </div>
        </div>
      </div>

      <!-- Terms Text -->
      <div class="mx-2 mt-4 text-center text-muted small">
        By clicking continue, you agree to our
        <a href="#" class="text-decoration-none text-primary">Terms of Service</a> and
        <a href="#" class="text-decoration-none text-primary">Privacy Policy</a>.
      </div>
    </div>
  </div>
</AuthenticationLayout>
