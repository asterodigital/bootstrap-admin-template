---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import Branding from '../../../components/common/branding.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<AuthenticationLayout
  title="Recovery Link Sent"
  description="Recovery link sent example"
  currentPath="authentication/split/link-sent"
>
  <div class="row m-0 min-vh-100">
    <div class="col-md-6 p-4 my-auto d-flex justify-content-center">
      <!-- Theme Toggle Button -->
      <button
        class="btn p-0 border-0 shadow-none position-absolute top-0 mx-4 my-2 split-theme-toggler"
        id="theme-toggle"
      >
        <i class="ri-sun-line fs-5"></i>
      </button>
      <div>
        <!-- Company Logo and Name -->
        <Branding brandName={false} />
        <h1 class="h4 text-center mb-3">Recovery Link Sent</h1>
        <div class="card mx-auto" style="max-width: 500px">
          <div class="card-body p-2">
            <div class="text-start fs-2 mb-2">
              <i class="ri-mail-send-line"></i>
            </div>
            <p class="text-start text-muted mb-4">
              Recovery link sent to your email. Check your inbox (and spam) to reset your password.
            </p>

            <div class="text-start mb-3">
              <a
                href={getPathPrefix('/authentication/split/forgot-password')}
                class="text-decoration-none text-primary"
              >
                Use another email address
              </a>
            </div>

            <div class="text-center mb-3">
              <button type="button" class="btn btn-primary w-100"> Resend Link </button>
            </div>

            <small class="text-muted d-block text-center">
              Please allow a few minutes for the email to arrive.
            </small>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 d-none d-md-block p-0 m-0">
      <img
        src={getAssetPrefix('/assets/svg/placeholder.svg')}
        class="img-fluid"
        alt=""
        style="object-fit: cover; width: 100%; height: 100%;"
      />
    </div>
  </div>
</AuthenticationLayout>
