---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import Branding from '../../../components/common/branding.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<AuthenticationLayout
  title="2-Step Verification Code"
  description="2-Step verification code example"
  currentPath="authentication/split/2-step-verification-code"
>
  <div class="row m-0 min-vh-100">
    <div class="col-md-6 p-4 my-auto d-flex justify-content-center">
      <!-- Theme Toggle Button -->
      <button
        class="btn p-0 border-0 shadow-none position-absolute top-0 mx-4 my-2 split-theme-toggler"
        id="theme-toggle"
      >
        <i class="ri-sun-line fs-5"></i>
      </button>
      <div>
        <!-- Company Logo and Name -->
        <Branding brandName={false} />
        <h1 class="h4 text-center mb-3">2-Step Verification</h1>
        <div class="card mx-auto" style="max-width: 400px">
          <div class="card-body">
            <div class="text-start fs-2 mb-2">
              <i class="ri-key-line"></i>
            </div>
            <p class="text-start text-muted mb-4">
              Enter the 6-digit verification code sent to your phone number.
            </p>
            <!-- 2-Step Verification Form Form -->
            <form class="text-start">
              <div class="d-flex justify-content-between mb-3">
                <input
                  type="text"
                  class="py-3 me-1 form-control text-center"
                  id="code1"
                  maxlength="1"
                  required
                  autofocus
                />
                <input
                  type="text"
                  class="py-3 me-1 form-control text-center"
                  id="code2"
                  maxlength="1"
                  required
                />
                <input
                  type="text"
                  class="py-3 me-1 form-control text-center"
                  id="code3"
                  maxlength="1"
                  required
                />
                <input
                  type="text"
                  class="py-3 me-1 form-control text-center"
                  id="code4"
                  maxlength="1"
                  required
                />
                <input
                  type="text"
                  class="py-3 me-1 form-control text-center"
                  id="code5"
                  maxlength="1"
                  required
                />
                <input
                  type="text"
                  class="py-3 form-control text-center"
                  id="code6"
                  maxlength="1"
                  required
                />
              </div>
              <div class="form-check text-start mb-3">
                <label class="form-check-label" for="dontAskAgain">
                  <input class="form-check-input" type="checkbox" id="dontAskAgain" />
                  Do not ask again on this device
                </label>
              </div>
              <button type="submit" class="btn btn-primary w-100">Verify Code</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 d-none d-md-block p-0 m-0">
      <img
        src={getAssetPrefix('/assets/svg/placeholder.svg')}
        class="img-fluid"
        alt=""
        style="object-fit: cover; width: 100%; height: 100%;"
      />
    </div>
  </div>
</AuthenticationLayout>
