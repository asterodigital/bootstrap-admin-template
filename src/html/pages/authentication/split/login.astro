---
import AuthenticationLayout from "../../../layouts/admin/authentication-layout.astro";
import Branding from "../../../components/common/branding.astro";
import { getAssetPrefix, getPathPrefix } from "../../../../utils/path.js";
---

<AuthenticationLayout
  title="Login"
  description="Login example"
  currentPath="authentication/split/login"
>
  <div class="row m-0 min-vh-100">
    <div class="col-md-6 p-4 my-auto d-flex justify-content-center">
      <!-- Theme Toggle Button -->
      <button
        class="btn p-0 border-0 shadow-none position-absolute top-0 mx-4 my-2 split-theme-toggler"
        id="theme-toggle"
      >
        <i class="ri-sun-line fs-5"></i>
      </button>
      <div>
        <!-- Company Logo and Name -->
        <Branding brandName={false} />
        <h1 class="h4 text-center mb-3">Login to your account</h1>
        <div class="card mx-auto" style="max-width: 500px">
          <div class="card-body">
            <p class="text-start text-muted mb-4">
              Enter your email and password to access your account.
            </p>
            <!-- Login Form -->
            <form class="text-start">
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  placeholder="m@example.com"
                  required
                />
              </div>
              <div class="mb-3">
                <div class="d-flex justify-content-between align-items-center mb-1">
                  <label for="password" class="form-label mb-0">Password</label>
                  <a
                    href={getPathPrefix("/authentication/split/forgot-password")}
                    class="text-decoration-none text-primary">Forgot your password?</a
                  >
                </div>
                <div class="password-wrapper">
                  <input
                    type="password"
                    class="form-control password-input"
                    id="password"
                    placeholder="Enter your password"
                    required
                  />
                  <button class="password-toggle" type="button">
                    <i class="ri-eye-off-line"></i>
                  </button>
                </div>
              </div>
              <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="rememberMe" />
                <label class="form-check-label" for="rememberMe"> Remember me </label>
              </div>
              <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>
            </form>
            <div class="text-center text-muted mb-3">Or continue with</div>
            <button
              class="btn btn-outline-primary d-flex align-items-center justify-content-center gap-2 mb-3 w-100"
            >
              <i class="ri-google-fill"></i>
              Google
            </button>

            <div class="text-center">
              Don't have an account? <a
                href={getPathPrefix("/authentication/split/register")}
                class="text-decoration-none text-primary">Register</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 d-none d-md-block p-0 m-0">
      <img
        src={getAssetPrefix("/assets/svg/placeholder.svg")}
        class="img-fluid"
        alt=""
        style="object-fit: cover; width: 100%; height: 100%;"
      />
    </div>
  </div>
</AuthenticationLayout>
