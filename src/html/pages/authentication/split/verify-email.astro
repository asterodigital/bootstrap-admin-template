---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import Branding from '../../../components/common/branding.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<AuthenticationLayout
  title="Verify Email"
  description="Verify email example"
  currentPath="authentication/split/verify-email"
>
  <div class="row m-0 min-vh-100">
    <div class="col-md-6 p-4 my-auto d-flex justify-content-center">
      <!-- Theme Toggle Button -->
      <button
        class="btn p-0 border-0 shadow-none position-absolute top-0 mx-4 my-2 split-theme-toggler"
        id="theme-toggle"
      >
        <i class="ri-sun-line fs-5"></i>
      </button>
      <div>
        <!-- Company Logo and Name -->
        <Branding brandName={false} />
        <h1 class="h4 text-center mb-3">Verify Your Email Address</h1>
        <div class="card shadow-sm mx-auto" style="max-width: 500px">
          <div class="card-body p-4">
            <div class="text-start fs-2 mb-2">
              <i class="ri-mail-send-line"></i>
            </div>
            <p class="text-start text-muted mb-4">
              Enter the verification code sent to your email to complete the process.
            </p>

            <!-- Verification Code Form -->
            <form class="text-start mb-3">
              <div class="mb-3">
                <label for="verification-code" class="form-label">Enter the verification code</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="verification-code"
                  placeholder="Verification Code"
                  required
                  maxlength="6"
                  pattern="[0-9]{6}"
                />
              </div>
              <button type="submit" class="btn btn-primary w-100"> Verify Email </button>
            </form>

            <div class="text-center">
              Didnâ€™t receive the code? <a href="#" class="text-decoration-none text-primary"
                >Resend</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 d-none d-md-block p-0 m-0">
      <img
        src={getAssetPrefix('/assets/svg/placeholder.svg')}
        class="img-fluid"
        alt=""
        style="object-fit: cover; width: 100%; height: 100%;"
      />
    </div>
  </div>
</AuthenticationLayout>
