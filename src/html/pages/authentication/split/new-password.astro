---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import Branding from '../../../components/common/branding.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<AuthenticationLayout
  title="New Password"
  description="New password example"
  currentPath="authentication/split/new-password"
>
  <div class="row m-0 min-vh-100">
    <div class="col-md-6 p-4 my-auto d-flex justify-content-center">
      <!-- Theme Toggle Button -->
      <button
        class="btn p-0 border-0 shadow-none position-absolute top-0 mx-4 my-2 split-theme-toggler"
        id="theme-toggle"
      >
        <i class="ri-sun-line fs-5"></i>
      </button>
      <div>
        <!-- Company Logo and Name -->
        <Branding brandName={false} />
        <h1 class="h4 text-center mb-3">Set New Password</h1>
        <div class="card shadow-sm mx-auto" style="max-width: 500px">
          <div class="card-body p-4">
            <div class="text-start fs-2 mb-2">
              <i class="ri-lock-line"></i>
            </div>
            <p class="text-start text-muted mb-3">
              Choose a strong new password to secure your account.
            </p>

            <!-- New Password Form -->
            <form class="text-start mb-3">
              <div class="mb-3">
                <label for="new-password" class="form-label">New Password</label>
                <div class="password-wrapper">
                  <input
                    type="password"
                    class="form-control password-input"
                    id="new-password"
                    placeholder="Password"
                    autocomplete="new-password"
                    required
                    minlength="8"
                    title="Password must be at least 8 characters long"
                  />
                  <button class="password-toggle" type="button" aria-label="Show password">
                    <i class="ri-eye-off-line"></i>
                  </button>
                </div>
              </div>
              <div class="mb-3">
                <label for="confirm-password" class="form-label">Confirm Password</label>
                <div class="password-wrapper">
                  <input
                    type="password"
                    class="form-control password-input"
                    id="confirm-password"
                    placeholder="Password"
                    autocomplete="new-password"
                    required
                  />
                  <button class="password-toggle" type="button" aria-label="Show password">
                    <i class="ri-eye-off-line"></i>
                  </button>
                </div>
                <small class="text-muted">Ensure both fields match</small>
              </div>
              <button type="submit" class="btn btn-primary w-100">Save New Password</button>
            </form>

            <div class="text-center mt-3">
              <a
                href={getPathPrefix('/authentication/split/login')}
                class="text-decoration-none text-primary">Back to Login</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 d-none d-md-block p-0 m-0">
      <img
        src={getAssetPrefix('/assets/svg/placeholder.svg')}
        class="img-fluid"
        alt=""
        style="object-fit: cover; width: 100%; height: 100%;"
      />
    </div>
  </div>
</AuthenticationLayout>
