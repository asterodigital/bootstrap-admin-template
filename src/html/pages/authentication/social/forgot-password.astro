---
import AuthenticationLayout from "../../../layouts/admin/authentication-layout.astro";
import Branding from "../../../components/common/branding.astro";
import ThemeToggler from "../../../components/common/theme-toggler.astro";
import { getAssetPrefix, getPathPrefix } from "../../../../utils/path.js";
---

<AuthenticationLayout
  title="Forgot Password"
  description="Forgot password example"
  currentPath="authentication/social/forgot-password"
>
  <div class="d-flex justify-content-center align-items-center min-vh-100 position-relative">
    <!-- Theme Toggle Button -->
    <ThemeToggler />
    <div class="text-center" style="min-width: 340px; max-width: 400px;">
      <!-- Company Logo and Name -->
      <Branding brandName={false} />
      <h1 class="h3 mb-3">Forgot Password</h1>
      <!-- Main Card -->
      <div class="card shadow-sm m-2">
        <div class="card-body p-4">
          <div class="text-start fs-2 mb-2">
            <i class="ri-lock-line"></i>
          </div>
          <p class="text-start text-muted mb-4">
            Enter your email address below to reset your password.
          </p>

          <!-- Forgot Password Form -->
          <form class="text-start mb-3">
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="m@example.com"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
          </form>

          <div class="text-center">
            Remember your password? <a
              href={getPathPrefix("/authentication/social/login")}
              class="text-decoration-none text-primary">Login</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
