---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import Branding from '../../../components/common/branding.astro'
import ThemeToggler from '../../../components/common/theme-toggler.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<AuthenticationLayout
  title="Lock Screen"
  description="Lock screen example"
  currentPath="authentication/social/lock-screen"
>
  <div class="d-flex justify-content-center align-items-center min-vh-100 position-relative py-2">
    <!-- Theme Toggle Button -->
    <ThemeToggler />
    <div class="text-center" style="min-width: 340px; max-width: 400px;">
      <!-- Company Logo and Name -->
      <Branding brandName={false} />
      <h1 class="h3 mb-3">Account locked</h1>
      <!-- Main Card -->
      <div class="card shadow-sm m-2">
        <div class="card-body p-4">
          <!-- Account Locked Form -->
          <form class="text-start">
            <div class="text-center mb-3">
              <!-- Profile Image -->
              <div class="avatar position-relative">
                <img
                  src={getAssetPrefix('/assets/img/avatars/avatar2.jpg')}
                  alt="User"
                  class="rounded-circle mb-2"
                  width="56"
                  height="56"
                />
              </div>
              <!-- User Name -->
              <h5 class="text-muted">Amara Evans</h5>
            </div>
            <div class="mb-3">
              <p class="text-muted">
                <i class="ri-lock-line"></i> Your account has been locked. Please enter your password
                to unlock it.
              </p>
            </div>
            <div class="mb-3">
              <div class="d-flex justify-content-between align-items-center mb-1">
                <label for="password" class="form-label mb-0">Password</label>
                <a
                  href={getPathPrefix('/authentication/social/forgot-password')}
                  class="text-decoration-none text-primary">Forgot your password?</a
                >
              </div>
              <div class="password-wrapper">
                <input
                  type="password"
                  class="form-control password-input"
                  id="password"
                  placeholder="Enter your password"
                  autocomplete="current-password"
                  required
                />
                <button class="password-toggle" type="button" aria-label="Show password">
                  <i class="ri-eye-off-line"></i>
                </button>
              </div>
            </div>
            <button type="submit" class="btn btn-primary w-100">Unlock Account</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
