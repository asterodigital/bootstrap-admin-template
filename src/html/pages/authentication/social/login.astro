---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import Branding from '../../../components/common/branding.astro'
import ThemeToggler from '../../../components/common/theme-toggler.astro'
import { getPathPrefix } from '../../../../utils/path.js'
---

<AuthenticationLayout
  title="Login"
  description="Login example"
  currentPath="authentication/social/login"
>
  <div class="d-flex justify-content-center align-items-center min-vh-100 position-relative py-2">
    <!-- Theme Toggle Button -->
    <ThemeToggler />
    <div class="text-center" style="min-width: 340px; max-width: 400px;">
      <!-- Company Logo and Name -->
      <Branding brandName={false} />
      <h1 class="h3 mb-3">Log in</h1>
      <!-- Main Card -->
      <div class="card m-2">
        <div class="card-body p-2">
          <!-- Social Login Buttons -->
          <div class="d-grid gap-2 mb-4">
            <button
              class="btn btn-outline-primary d-flex align-items-center justify-content-center gap-2"
            >
              <i class="ri-google-fill"></i>
              Login with Google
            </button>
            <button
              class="btn btn-outline-primary d-flex align-items-center justify-content-center gap-2"
            >
              <i class="ri-apple-fill"></i>
              Login with Apple
            </button>
          </div>

          <div class="text-muted mb-3">Or continue with</div>

          <!-- Login Form -->
          <form class="text-start">
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="m@example.com"
                autocomplete="username"
                required
              />
            </div>
            <div class="mb-3">
              <div class="d-flex justify-content-between align-items-center mb-1">
                <label for="password" class="form-label mb-0">Password</label>
                <a
                  href={getPathPrefix('/authentication/social/forgot-password')}
                  class="text-decoration-none text-primary">Forgot your password?</a
                >
              </div>
              <div class="password-wrapper">
                <input
                  type="password"
                  class="form-control password-input"
                  id="password"
                  placeholder="Password"
                  autocomplete="current-password"
                  required
                />
                <button class="password-toggle" type="button" aria-label="Show password">
                  <i class="ri-eye-off-line"></i>
                </button>
              </div>
            </div>
            <div class="mb-3 form-check">
              <label class="form-check-label" for="rememberMe">
                <input type="checkbox" class="form-check-input" id="rememberMe" /> Remember me
              </label>
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>
          </form>

          <div class="text-center">
            Don't have an account? <a
              href={getPathPrefix('/authentication/social/register')}
              class="text-decoration-none text-primary">Register</a
            >
          </div>
        </div>
      </div>

      <!-- Terms Text -->
      <div class="mx-2 mt-4 text-muted small">
        By clicking continue, you agree to our
        <a href="#" class="text-decoration-none text-primary">Terms of Service</a> and
        <a href="#" class="text-decoration-none text-primary">Privacy Policy</a>.
      </div>
    </div>
  </div>
</AuthenticationLayout>
