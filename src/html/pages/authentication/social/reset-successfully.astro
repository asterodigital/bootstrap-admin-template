---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import Branding from '../../../components/common/branding.astro'
import ThemeToggler from '../../../components/common/theme-toggler.astro'
import { getPathPrefix } from '../../../../utils/path.js'
---

<AuthenticationLayout
  title="Password Reset Successfully"
  description="Password reset successfully example"
  currentPath="authentication/social/reset-successfully"
>
  <div class="d-flex justify-content-center align-items-center min-vh-100 position-relative">
    <!-- Theme Toggle Button -->
    <ThemeToggler />
    <div class="text-center" style="min-width: 340px; max-width: 400px;">
      <!-- Company Logo and Name -->
      <Branding brandName={false} />
      <h1 class="h3 mb-3">Password Reset Successfully</h1>
      <!-- Main Card -->
      <div class="card m-2">
        <div class="card-body p-2">
          <div class="text-start fs-2 mb-2">
            <i class="ri-lock-unlock-line"></i>
          </div>
          <p class="text-start text-muted mb-4">
            Your password has been successfully reset. You can now log in with your new password.
          </p>

          <div class="text-center mb-3">
            <a href={getPathPrefix('/authentication/social/login')} class="btn btn-primary w-100">
              Login Now
            </a>
          </div>

          <div class="text-center text-muted">
            If you did not request a password reset, please contact support immediately.
          </div>
        </div>
      </div>
    </div>
  </div>
</AuthenticationLayout>
