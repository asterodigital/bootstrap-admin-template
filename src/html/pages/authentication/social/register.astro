---
import AuthenticationLayout from "../../../layouts/admin/authentication-layout.astro";
import Branding from "../../../components/common/branding.astro";
import ThemeToggler from "../../../components/common/theme-toggler.astro";
import { getAssetPrefix, getPathPrefix } from "../../../../utils/path.js";
---

<AuthenticationLayout
  title="Register"
  description="Register example"
  currentPath="authentication/social/register"
>
  <div class="d-flex justify-content-center align-items-center min-vh-100 position-relative py-2">
    <!-- Theme Toggle Button -->
    <ThemeToggler />
    <div class="text-center" style="min-width: 340px; max-width: 400px;">
      <!-- Company Logo and Name -->
      <Branding brandName={false} />
      <h1 class="h3 mb-3">Register</h1>
      <!-- Main Card -->
      <div class="card shadow-sm m-2">
        <div class="card-body p-4">
          <p class="text-muted mb-4">Register with your Google or Apple account.</p>

          <!-- Social Login Buttons -->
          <div class="d-grid gap-2 mb-4">
            <button
              class="btn btn-outline-primary d-flex align-items-center justify-content-center gap-2"
            >
              <i class="ri-google-fill"></i>
              Register with Google
            </button>
            <button
              class="btn btn-outline-primary d-flex align-items-center justify-content-center gap-2"
            >
              <i class="ri-apple-fill"></i>
              Register with Apple
            </button>
          </div>

          <div class="text-muted mb-3">Or continue with</div>

          <!-- Register Form -->
          <form class="text-start">
            <!-- Full Name Field -->
            <div class="mb-3">
              <label for="fullName" class="form-label">Full Name</label>
              <input
                type="text"
                class="form-control"
                id="fullName"
                placeholder="John Doe"
                required
              />
            </div>

            <!-- Email Field -->
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="m@example.com"
                required
              />
            </div>

            <!-- Password Field -->
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <div class="password-wrapper">
                <input
                  type="password"
                  class="form-control password-input"
                  id="password"
                  placeholder="Enter password"
                  required
                />
                <button class="password-toggle" type="button">
                  <i class="ri-eye-off-line"></i>
                </button>
              </div>
            </div>

            <!-- Confirm Password Field -->
            <div class="mb-3">
              <label for="confirmPassword" class="form-label">Confirm Password</label>
              <div class="password-wrapper">
                <input
                  type="password"
                  class="form-control password-input"
                  id="confirmPassword"
                  placeholder="Confirm your password"
                  required
                />
                <button class="password-toggle" type="button">
                  <i class="ri-eye-off-line"></i>
                </button>
              </div>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3">Register</button>
          </form>

          <div class="text-center">
            Already have an account? <a
              href={getPathPrefix("/authentication/social/login")}
              class="text-decoration-none text-primary">Login</a
            >
          </div>
        </div>
      </div>

      <!-- Terms Text -->
      <div class="mx-2 mt-4 text-muted small">
        By clicking continue, you agree to our
        <a href="#" class="text-decoration-none text-primary">Terms of Service</a> and
        <a href="#" class="text-decoration-none text-primary">Privacy Policy</a>.
      </div>
    </div>
  </div>
</AuthenticationLayout>
